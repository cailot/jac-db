# war package
mvn clean package

# Build and tag the image
docker build --platform=linux/amd64 -t jac-function .
docker tag jac-function jaccontainer.azurecr.io/jac-function:latest

# Login to Azure and ACR
az login
az acr login --name jaccontainer

# Push the image to ACR
docker push jaccontainer.azurecr.io/jac-function:latest

################### Local run ###################
# 1. mvn clean package
# 2. mvn azure-functions:run
# 3. http://localhost:7071/api/HttpExample
# 4. check jacstorage for the output